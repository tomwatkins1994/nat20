{
    "name": "nat20",
    "version": "1.0.0",
    "description": "A package for simulating dice rolls",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "main": "dist/index.js",
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
        "start-dev": "nodemon",
        "test": "mocha -r ts-node/register ./test/index.test.ts",
        "test:report": "mocha -r ts-node/register ./test/index.test.ts --reporter mochawesome || true",
        "build": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomwatkins1994/dice-roller.git"
    },
    "keywords": [
        "Dice",
        "Roll",
        "RPG"
    ],
    "author": "Tom Watkins",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tomwatkins1994/dice-roller/issues"
    },
    "homepage": "https://github.com/tomwatkins1994/dice-roller#readme",
    "dependencies": {
        "mathjs": "^7.2.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.23",
        "@types/mathjs": "^6.0.5",
        "chai": "^4.2.0",
        "mocha": "^8.0.1",
        "mochawesome": "^6.1.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
