{
    "name": "dice-roller",
    "version": "1.0.0",
    "description": "A package for simulating dice rolls",
    "main": "src/index.js",
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
        "start-dev": "nodemon",
        "test": "mocha -r ts-node/register ./test/index.test.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomwatkins1994/dice-roller.git"
    },
    "keywords": [
        "Dice",
        "Roll",
        "RPG"
    ],
    "author": "Tom Watkins",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tomwatkins1994/dice-roller/issues"
    },
    "homepage": "https://github.com/tomwatkins1994/dice-roller#readme",
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.23",
        "chai": "^4.2.0",
        "mocha": "^8.0.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
